<h1><%= @post.title %></h1>

<p><%= sanitize @post.content %><p>

<h1>Auther</h1>

<%= @post.auther %>

<h2>Comments</h2>

 <%= render 'comments/comment', post: @post %>


<%= render 'comments/new', post: @post %> 


<%= link_to 'Back', posts_path %>

<tbody>
  <tr>
    <% if @post.bookmarked_by?(current_user) %>
      <td><%= button_to "ブックマークを外す", post_bookmark_path(@post), method: :delete %></td>
    <% else %>
      <td><%= button_to "ブックマーク", post_bookmarks_path(@post), method: :post %></td>
    <% end %>
  </tr>
</tbody>